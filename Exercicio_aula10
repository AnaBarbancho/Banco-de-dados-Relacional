-- exercicio 1
CREATE VIEW v_depcidade (cidade,nome) AS SELECT d.nome,c.nome FROM tbl_cidades c JOIN tbl_departamentos d ON c.cod_cidade=d.cod_departamento;
SELECT * FROM v_depcidade;

--exercicio 2
 Select nome, cidade FROM v_depcidade WHERE cidade = 'Houston';
      nome      | cidade
----------------+---------
 Departamento 4 | Houston
(1 row)

--exercicio 3
CREATE VIEW v_opsalario AS Select sum(salario) as soma , avg(salario) as media From tbl_empregados;
 SELECT * FROM v_opsalario;
  soma  | media
--------+--------
 212300 | 5307.5
(1 row)
